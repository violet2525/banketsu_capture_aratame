{
  "manifest_version": 2,
  "name": "バンケツくんキャプチャ",
  "version": "0.1.1",
  "description": "バンケツの画面スクショを撮る",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "downloads",
    "<all_urls>",
    "tabCapture",
    "alarms",
    "downloads.shelf"
  ],
  "background": {
      "scripts": [ 
        "startstop.js"
      , "background.js" 
      ],
      "persistent": false
  },
  "icons" : {
    "128": "icon_big.png"
  },
  "commands":{
    "screen_shot_key": {
      "suggested_key":{"default": "Ctrl+Shift+Z"},
      "description": "静止画撮影",
      "global": false
    },
    "record_startstop_key": {
      "suggested_key":{"default": "Ctrl+Shift+X"},
      "description": "動画撮影開始・停止",
      "global": false
    }
  }
}